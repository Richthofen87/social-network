<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <changeSet id="create dialog and message table" author="ilya.kukushkin">
        <createTable tableName="dialog">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="is_deleted" type="boolean"/>
            <column name="unread_count" type="INTEGER"/>
            <column name="author_id" type="uuid"/>
            <column name="friend_id" type="uuid"/>
        </createTable>
        <createTable tableName="messages">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="is_deleted" type="boolean"/>
            <column name="author_id" type="uuid"/>
            <column name="friend_id" type="uuid"/>
            <column name="time" type="timestamp with time zone"/>
            <column name="message" type="text"/>
            <column name="read_status" type="varchar(255)"/>
            <column name="dialog_id" type="uuid"/>
        </createTable>
    </changeSet>
</databaseChangeLog>